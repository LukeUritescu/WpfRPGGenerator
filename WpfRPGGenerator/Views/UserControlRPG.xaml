<UserControl x:Class="WpfRPGGenerator.Views.UserControlRPG"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfRPGGenerator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<StackPanel>
			<Label>Name:</Label>
			<TextBox x:Name="txtName" Text="{Binding Name, Mode=TwoWay}"></TextBox>
			<Label>Strength:</Label>
			<TextBox x:Name="txtStrength" Text="{Binding Strength, Mode=TwoWay}"></TextBox>
			<Label>Dexterity:</Label>
			<TextBox x:Name="txtDexterity" Text="{Binding Dexterity, Mode=TwoWay}"></TextBox>
			<Label>Constitution:</Label>
			<TextBox x:Name="txtConstitution" Text="{Binding Constitution, Mode=TwoWay}"></TextBox>
			<Label>Intelligence:</Label>
			<TextBox x:Name="txtIntelligence" Text="{Binding Intelligence, Mode=TwoWay}"></TextBox>
			<Label>Wisdom:</Label>
			<TextBox x:Name="txtWisdom" Text="{Binding Wisdom, Mode=TwoWay}"></TextBox>
			<Label>Charisma:</Label>
			<TextBox x:Name="txtCharisma" Text="{Binding Charisma, Mode=TwoWay}"></TextBox>
		</StackPanel>
	</Grid>
</UserControl>
